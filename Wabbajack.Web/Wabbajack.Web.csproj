<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        
        <!-- Currently required in the StatusDashboard converting DateTime to local time. -->
        <!-- <BlazorEnableTimeZoneSupport>false</BlazorEnableTimeZoneSupport>-->
        
        <!-- Remove Collaction Support. -->
        <BlazorWebAssemblyPreserveCollationData>false</BlazorWebAssemblyPreserveCollationData>

        <!-- Remove insecure UTF-7 encoding code. -->
        <EnableUnsafeUTF7Encoding>false</EnableUnsafeUTF7Encoding>

        <!-- Remove globalization-specific code and data. -->
        <InvariantGlobalization>false</InvariantGlobalization>
    </PropertyGroup>
    
    <ItemGroup>
        <PackageReference Include="Markdig" Version="0.25.0" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="6.0.0-preview.6.21355.2" />
        <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="6.0.0-preview.6.21355.2" PrivateAssets="all" />
        <PackageReference Include="MudBlazor" Version="5.1.0" />
        <PackageReference Include="Wabbajack.DTOs" Version="3.0.0-alpha3" />
        <!--<PackageReference Include="MudBlazor.Markdown" Version="0.0.1" />-->
    </ItemGroup>

</Project>
