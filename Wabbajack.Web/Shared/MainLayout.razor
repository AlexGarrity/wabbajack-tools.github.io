@using Wabbajack.Web.Pages.Gallery
@using Wabbajack.Web.Pages.StatusDashboard
@using Wabbajack.Web.Pages.Docs
@inherits LayoutComponentBase

<MudThemeProvider Theme="CustomTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudLink Typo="Typo.h5" Class="ml-3" Href="/" Style="color: var(--mud-palette-primary-text) !important" Underline="Underline.None">
            Wabbajack
        </MudLink>
        <MudSpacer />
        <MudLink Class="mx-1 mx-sm-3" Typo="Typo.h6" Href="/" Style="color: var(--mud-palette-primary-text) !important" Underline="Underline.None">Home</MudLink>
                <MudLink Class="mx-1 mx-sm-3" Typo="Typo.h6" Href="@Gallery.Route" Style="color: var(--mud-palette-primary-text) !important" Underline="Underline.None">Gallery</MudLink>
                <MudLink Class="mx-1 mx-sm-3" Typo="Typo.h6" Href="@StatusDashboard.Route" Style="color: var(--mud-palette-primary-text) !important" Underline="Underline.None">Status</MudLink>
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/wabbajack-tools/wabbajack" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="1" Variant="DrawerVariant.Responsive" Breakpoint="Breakpoint.Xl" ClipMode="DrawerClipMode.Always">
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="@Gallery.Route" Icon="@Icons.Material.Filled.Album">
                Gallery
            </MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="@StatusDashboard.Route" Icon="@Icons.Material.Filled.Dashboard">
                Status Dashboard
            </MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="@Docs.Route" Icon="@Icons.Material.Filled.Book">
                Documentation
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
    <CustomFooter/>
</MudLayout>

@code{
    private bool _drawerOpen;

    // TODO: update Theme
    private static readonly MudTheme CustomTheme = new();

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
}
