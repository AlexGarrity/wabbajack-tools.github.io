{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "skipLibCheck": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": [
    "src/**/*",
    "gulpfile.ts",
    "__tests__/**/*"
  ]
}
